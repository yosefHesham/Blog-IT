<div class="single_user">
  <%= render "shared/user", user: @user %>
  <div class="bio border-black ">
    <h3>Bio</h3>
    <p><%= @user.bio %></p>
  </div>

  <div class="posts">
    <% @recent_posts.each do |post| %>
      <%= render "shared/post", post: post %> 
    <% end %>
  </div>

  <button type="button" class="btn">
    <%= link_to "See All Posts", user_posts_path(@user) %>
  </button>
</div>